{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build console",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "./crawl-ref/source"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build tiles",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "./crawl-ref/source",
                "TILES=y"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "-C",
                "./crawl-ref/source"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}